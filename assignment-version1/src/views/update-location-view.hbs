<form class="box" action="/station/{{location.stationid}}/location/{{location._id}}" method="POST">
  <label>Enter Updated Details</label>
  <div class="field is-horizontal">
    <div class="field-body">

      <div class="field">
        <input class="input" type="text" placeholder="{{location.name}}" name="name">
      </div>

      <div class="field">
        <input class="input" step="0.0000001" maxlength="10" min="-90.0000000" max="90.0000000" type="number" placeholder="{{location.latitude}}" name="latitude"/>
      </div>

      <div class="field">
        <input class="input" step="0.0000001" maxlength="10" min="-180.0000000" max="180.0000000" type="number" placeholder="{{location.longitude}}" name="longitude"/>
      </div>
      <div class="field">
       <div class="select" >
         <select name="category"  >
           <option >{{location.category}}</option>
           <option value="Type 1 Plug">Type 1 5pin connector<option>
          <option value="Type 2 Plug">Type 2 7pin connector</option>
          <option value="Combination Plug">CCS/Combination Plug/Rapid Charging</option>
          <option value="CHAdeMO plug">CHAdeMO Plug</option>
          <option value="Type 2 Plug">Type 2 7pin connector</option>
          <option value="Domestic Socket">Domestic Socket 3pin connector</option>
          <option value="CEE Plug">CEE Plug/Camping connector</option>
          <option value="Tesla Supercharger">Tesla Supercharger</option>

         </select>
       </div>
      </div>
      <div class="field">
          <textarea class="textarea is-input has-fixed-size" placeholder="{{location.description}}" type="text" maxlength="200" pattern="[A-Za-z\\s]+{1,20}" name="description"></textarea>
      </div>

    </div>
  </div>
  <button class="button is-primary">Update Location</button>
</form>