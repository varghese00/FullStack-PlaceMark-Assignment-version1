<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Location Name</th>
      <th>Latitiude</th>
      <th>Longitude</th>
      <th>Category</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each station.locations}}
      <tr>
        <td>
          {{name}}
        </td>
        <td>
          {{latitude}}
        </td>
        <td>
          {{longitude}}
        </td>
        <td>
          {{category}}
        </td>
        <td>
          {{description}}
        </td>
          <td>
          <a href="/station/{{../station._id}}/location/{{_id}}" class="ui icon button">
            <i class="fas fa-pen"></i>
            </a>
        </td>
         <td>
          <a href="/station/{{../station._id}}/deleteLocation/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>